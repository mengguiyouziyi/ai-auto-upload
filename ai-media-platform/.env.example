# AI媒体平台环境配置示例文件
# 复制此文件为 .env 并填入实际配置值

# 应用配置
APP_NAME=AI媒体平台
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-secret-key-here

# 服务端口配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=9000
FRONTEND_PORT=5174

# 数据库配置
DATABASE_URL=sqlite:///./accounts.db
FILES_DB_URL=sqlite:///./files.db
SOCIAL_DB_URL=sqlite:///./social_auto_upload.db

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# AI服务配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# GLM配置
GLM_API_KEY=your-glm-api-key
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv,jpg,jpeg,png,gif

# 云服务配置
# 阿里云OSS
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET=
ALIYUN_OSS_ENDPOINT=

# 腾讯云COS
TENCENT_SECRET_ID=
TENCENT_SECRET_KEY=
TENCENT_COS_BUCKET=
TENCENT_COS_REGION=

# 七牛云
QINIU_ACCESS_KEY=
QINIU_SECRET_KEY=
QINIU_BUCKET=

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 安全配置
CORS_ORIGINS=http://localhost:5174,http://127.0.0.1:5174
ALLOWED_HOSTS=localhost,127.0.0.1

# 监控配置
SENTRY_DSN=
PROMETHEUS_PORT=9090

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# 微信配置
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# 抖音配置
DOUYIN_CLIENT_KEY=
DOUYIN_CLIENT_SECRET=

# B站配置
BILIBILI_SESSDATA=
BILIBILI_CSRFTOKEN=

# 其他平台配置
KUAISHOU_COOKIE=
XHS_COOKIE=
BAIJIAHAO_COOKIE=